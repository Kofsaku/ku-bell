{% style %}
.malin__next:after,.malin__prev:after {
    background-color: {{ section.settings.color_bk }};
}

  .article-prev-next .malin__flex {
  display: flex;
  flex-wrap: wrap;
  padding: 0;
  margin: 0;
  list-style: none;
  height: 100%;
}

.article-prev-next .malin__grid_half {
  width: 100%;
}

@media (min-width: 750px) {
  .article-prev-next .malin__grid_half {
    width: calc(100% * 1/2);
  }
}

.article-prev-next .linkbtn__inner {
  height: 100px;
  display: block;
  background: #fff;
  box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.18);
  margin: 1rem;
  transition-duration: 0.5s;
}

.article-prev-next .malin__grid_onethird {
  width: calc(100% * 2/5);
  height: 100%;
}

.article-prev-next .malin__grid_twothird {
  width: calc(100% * 3/5);
  height: 100%;
}

.article-prev-next img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.article-prev-next .prvnxt__title {
  padding: 1rem 2rem;
  font-weight: bold;
  font-size: 1.3rem;
}

.article-prev-next a {
  text-decoration: none;
  color: #000;
  transition-duration: 1s;
}

.article-prev-next a:hover .linkbtn__inner {
  transform: translateY(-3px);
  box-shadow: 0px 3px 18px 3px rgba(0, 0, 0, 0.08);
}

.article-prev-next .malin__prev::after {
  content: "PREV";
  left: 10px;
}

.article-prev-next .malin__next::after {
  content: "NEXT";
  right: 10px;
}

.article-prev-next .malin__next, .article-prev-next .malin__prev {
  position: relative;
}

.article-prev-next .malin__next::after, .article-prev-next .malin__prev::after {
  position: absolute;
  font-size: .5rem;
  text-align: center;
  color: #fff !important;
  border-bottom-left-radius: 2px;
  border-bottom-right-radius: 2px;
  width: 45px;
  padding: 2px 10px;
  top: 0;
  font-weight: bold;
}
{% endstyle %}

<div class="page-width article-prev-next">
    <ul class="malin__flex">
        {% if blog.previous_article %}
        <li class="malin__grid_half">
          <a href="{{ blog.previous_article }}">
            <div class="linkbtn__inner malin__prev">
                <ul class="malin__flex">
                    <li class="malin__grid_onethird"><img src="{{ blog.previous_article.image | img_url: 'master' }}"></li>
                    <li class="malin__grid_twothird prvnxt__title">{{ blog.previous_article.title | truncate: 30 }}</li>
                </ul>
            </div>
        </a>
        </li>
        {% endif %}
        {% if blog.next_article %}
        <li class="malin__grid_half">
          <a href="{{ blog.next_article }}">
            <div class="linkbtn__inner malin__next">
                <ul class="malin__flex">
                    <li class="malin__grid_twothird prvnxt__title">{{ blog.next_article.title | truncate: 30 }}</li>
                    <li class="malin__grid_onethird"><img src="{{ blog.next_article.image | img_url: 'master' }}"></li>
                </ul>
            </div>
          </a>
        </li>
        {% endif %}
    </ul>
</div>

